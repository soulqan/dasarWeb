$daftarNilai = [

    'Matematika' => [
    ['Alice', 85], 
    ['Bob', 92],
    ['Charlie', 78],
    ],

    'Fisika' => [
    ['Alice', 90],
    ['Bob', 88],
    ['Charlie', 75],
    ],

    'Kimia' => [
    ['Alice', 92], 
    ['Bob', 80],
    ['Charlie', 85],
    ],
];
    $mataKuliah = 'Fisika';

    echo "<br>Daftar nilai mahasiswa dalam mata kuliah $mataKuliah: <br>";

    foreach ($daftarNilai[$mataKuliah] as $nilai) {
    echo "Nama: {$nilai [0]}, Nilai: {$nilai [1]} <br>";
    }